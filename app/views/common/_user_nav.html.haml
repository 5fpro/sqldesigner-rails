%ul.nav.pills.pull-right
  %li
    .social
      = fb_like(Setting.domain)
  - if current_user
    %li.dropdown
      = link_to "/accoount" , :class => "dropdown-toggle", :data => { :toogle => "dropdown" } do
        = current_user.name
      = render_list :class => "dropdown-menu" do |li|
        - li << link_to("Logout",destroy_user_session_path, :method => :delete )
  - else
    - if Devise.mappings[:user].registerable?
      %li
        = link_to( "Sing Up" ,new_user_registration_path)
    %li
      = link_to( "Login / Sign up", new_user_session_path )